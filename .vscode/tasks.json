    "version": "2.0.0",
    "tasks": [
        {
            "label": "build release",
            "type": "shell",
            "command": "npm run release",
            "problemMatcher": "$eslint-stylish",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build debug",
            "type": "shell",
            "command": "npm run debug",
            "problemMatcher": "$eslint-stylish",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
